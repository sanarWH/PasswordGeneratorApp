<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/raisinBlack"
    tools:context=".MainActivity">

    <TextView
        style="@style/tvStyleForBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="LENGHT" />

    <EditText
        style="@style/tvStyleForNonBoldText"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        style="@style/tvStyleForBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="SETTINGS" />

    <Switch
        style="@style/styleForSwitch"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="UPPERCASE (ABC)"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        style="@style/styleForSwitch"
        android:layout_marginTop="20dp"
        android:text="LOWERCASE (abc)"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        style="@style/styleForSwitch"
        android:layout_marginTop="20dp"
        android:text="NUMBERS (123)"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        style="@style/styleForSwitch"
        android:layout_marginTop="20dp"
        android:text="SPECIAL ($#!)"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        style="@style/btnStyleForNonBoldText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="GENERATE PASSWORD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/tvStyleForNonBoldText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Y0uRPA$$w0Rd123"/>

        <Button
            style="@style/btnStyleForNonBoldText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="COPY" />
    </LinearLayout>

</LinearLayout>
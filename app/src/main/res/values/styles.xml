<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tvStyleForNonBoldText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="styleForSwitch" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_for_switch</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="tvStyleForBoldText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btnStyleForNonBoldText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/raisinBlack</item>
        <item name="backgroundTint">@color/green</item>
    </style>
</resources>